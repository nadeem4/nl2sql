{
  "admin": {
    "role": "admin",
    "allowed_datasources": ["*"],
    "allowed_tables": ["*"]
  },
  "ops_manager": {
    "role": "manager",
    "allowed_datasources": ["manufacturing_ops", "manufacturing_ref"],
    "allowed_tables": [
        "employees", "machines", "maintenance_logs", "spare_parts",
        "factories", "machine_types", "shifts"
    ]
  },
  "sales_analyst": {
    "role": "analyst",
    "allowed_datasources": ["manufacturing_history", "manufacturing_supply"],
    "allowed_tables": [
        "customers", "sales_orders", "sales_order_items", "production_runs", "defects",
        "products", "inventory", "suppliers", "purchase_orders", "purchase_order_items"
    ]
  },
  "guest": {
    "role": "guest",
    "allowed_datasources": ["manufacturing_supply"],
    "allowed_tables": ["products"]
  }
}
